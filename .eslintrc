{
  "extends": ["@chargepoint/eslint-config", "airbnb-typescript-prettier"],

  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "no-plusplus": 0,
    "react/react-in-jsx-scope": "off",
    "import/extensions": 0,
    "prettier/prettier": ["error", { "singleQuote": true }],
    "react/jsx-no-bind": [
      1,
      {
        "allowArrowFunctions": true,
        "allowFunctions": true
      }
    ],
    "react/jsx-props-no-spreading": 0
  }
}
